#include <dt-bindings/regulator/samsung,s2mpg-regulator.h>

&drmdsim0 {
	#address-cells = <1>;
	#size-cells = <0>;

	panel@0 {
		compatible = "samsung,s6e3hc2-fhd";
		label = "samsung-s6e3hc2-fhd";
		channel = <0>;
		touch = <&spitouch>;

		/* reset, power */
		reset-gpios = <&gpa7 1 GPIO_ACTIVE_HIGH>;
		vci-supply = <&m_ldo27_reg>;
		vddi-supply = <&m_ldo24_reg>;
	};
	panel@1 {
		compatible = "samsung,emul";
		label = "samsung-emul";
		channel = <0>;

		/* reset, power */
		reset-gpios = <&gpa7 1 GPIO_ACTIVE_HIGH>;
	};
};

&drmdsim1 {
	#address-cells = <1>;
	#size-cells = <0>;
	status = "okay";

	panel@0 {
		compatible = "samsung,s6e3hc3";
		label = "samsung-s6e3hc3";
		channel = <0>;

		/* reset, power */
		reset-gpios = <&gpp23 0 GPIO_ACTIVE_HIGH>;
		vddd-supply = <&m_ldo28_reg>;
		vddd-normal-microvolt = <1200000>;
		vddd-lp-microvolt = <1050000>;
		vci-supply = <&s_ldo6_reg>;
		vddi-supply = <&s_bucka_reg>;
		is_secondary;
	};
	panel@1 {
		compatible = "samsung,emul";
		label = "samsung-emul";
		channel = <0>;

		/* reset, power */
		reset-gpios = <&gpp23 0 GPIO_ACTIVE_HIGH>;
		is_secondary;
	};
	panel@2 {
		compatible = "samsung,s6e3fc3";
		label = "samsung-s6e3fc3";
		channel = <0>;

		/* reset, power */
		reset-gpios = <&gpp23 0 GPIO_ACTIVE_HIGH>;
		vci-supply = <&s_ldo6_reg>;
		vddi-supply = <&s_bucka_reg>;
		is_secondary;
	};
};

/* Keep VDDIs always on */
&m_ldo24_reg {
	regulator-always-on;
	regulator-initial-mode = <SEC_OPMODE_ON>;
};

&s_bucka_reg {
	regulator-always-on;
	regulator-initial-mode = <SEC_OPMODE_ON>;
};

/* R4 VCI */
&s_ldo6_reg {
	regulator-min-microvolt = <3025000>;
	regulator-max-microvolt = <3025000>;
	regulator-always-on;
	regulator-initial-mode = <SEC_OPMODE_ON>;
};

/* R4 vddd-supply voltage */
&m_ldo28_reg {
	regulator-min-microvolt = <1050000>;
	regulator-max-microvolt = <1200000>;
	regulator-ramp-delay = <1200>;
	regulator-enable-ramp-delay = <125>;
};

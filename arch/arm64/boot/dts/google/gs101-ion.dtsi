		alignment = <0x0 0x00010000>;
		alloc-ranges = <0x9 0x80000000 0x80000000>,
			       <0x9 0x00000000 0x80000000>,
			       <0x8 0x80000000 0x80000000>,
			       <0x0 0x80000000 0x80000000>;
	};

	faimg_heap: faimg_heap {
		compatible = "shared-dma-pool";
		reusable;
		size = <0x3C00000>;
		alignment = <0x0 0x00010000>;
		alloc-ranges = <0x9 0x80000000 0x80000000>,
			       <0x9 0x00000000 0x80000000>,
			       <0x8 0x80000000 0x80000000>,
			       <0x0 0x80000000 0x80000000>;
	};

	farawimg_heap: farawimg_heap {
		compatible = "shared-dma-pool";
		reusable;
		size = <0x10000000>;
		alignment = <0x0 0x00010000>;
		alloc-ranges = <0x9 0x80000000 0x80000000>,
			       <0x9 0x00000000 0x80000000>,
			       <0x8 0x80000000 0x80000000>,
			       <0x0 0x80000000 0x80000000>;
	};

	faprev_heap: faprev_heap {
		compatible = "shared-dma-pool";
		reusable;
		size = <0x3000000>;
		alignment = <0x0 0x00010000>;
		alloc-ranges = <0x9 0x80000000 0x80000000>,
			       <0x9 0x00000000 0x80000000>,
			       <0x8 0x80000000 0x80000000>,
			       <0x0 0x80000000 0x80000000>;
	};

	famodel_heap: famodel_heap {
		size = <0x3200000>;
		alignment = <0x0 0x00010000>;
		alloc-ranges = <0x9 0x80000000 0x80000000>,
			       <0x9 0x00000000 0x80000000>,
			       <0x8 0x80000000 0x80000000>,
			       <0x0 0x80000000 0x80000000>;
	};

	tui_heap: tui_heap {
		size = <0x2000000>;
		alloc-ranges = <0x0 0x80000000 0x80000000>;
		alignment = <0x0 0x00010000>;
	};
};
